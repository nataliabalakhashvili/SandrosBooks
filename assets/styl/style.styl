            background white
        &::-webkit-scrollbar-thumb
            border-radius 5px
            background rgba(black, 0) 
        &:hover
            &::-webkit-scrollbar-thumb
                background rgba(black, 0.1)  
    .text-footer
        margin 10px
        padding 20px 0
        border-top 1px solid rgba(black, 0.1)
        .share
            color black
            font-size 12px
            &:hover
                color #89c5d8
            img
                width 20px
                margin-right 10px
                margin-top 3px
        time
            font-size 12px
            color #95a5a6
            margin-top 5px
    .title
        font-size 18px
        padding-top 30px
    .tags
        font-size 12px
        color #95a5a6
        padding-bottom 10px
        border-bottom 1px solid rgba(black, .1)
        margin-bottom 20px

.hidden-responsive-text
    display none
    +mq(600px)
        display block
    